<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_pid"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/list_item_ptext"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignStart="@+id/list_item_pid"
        android:layout_below="@+id/list_item_pid"
        android:layout_marginTop="83dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_item_ptimestamp"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignStart="@+id/list_item_ptext"
        android:layout_below="@+id/list_item_ptext"
        android:layout_marginTop="71dp"
        android:text="TextView" />

    <ListView
        android:id="@+id/comments_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/list_item_ptimestamp"
        android:layout_marginTop="64dp"
        android:layout_alignParentEnd="true" />

</LinearLayout>